<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1>Add a tag here for <%= @plant.name %>!</h1>
      <%= simple_form_for [@plant, @plant_tag] do |f| %>
        <%= f.input :tag, collection: Tag.all %>
        <%= f.submit "Add a tag", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
